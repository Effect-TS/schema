{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2015"],
    "paths": {
      "@fp-ts/codec": ["../../src/index.ts"],
      "@fp-ts/codec/test/*": ["../../test/*"],
      "@fp-ts/codec/examples/*": ["../../examples/*"],
      "@fp-ts/codec/*": ["../../src/*"]
    }
  }
}
